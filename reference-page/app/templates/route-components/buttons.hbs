<header>
	<h1>Buttons</h1>
</header>

<section>
	<h2>Primary Buttons</h2>
	{{#component-demo}}
		{{#wds-button}}Button text{{/wds-button}}
		{{#wds-button disabled=true}}Disabled{{/wds-button}}
		{{#wds-button class='wds-is-active'}}Is active{{/wds-button}}
	{{/component-demo}}
</section>

<section>
	<h2>Secondary Buttons</h2>
	{{#component-demo}}
		{{#wds-button class='wds-is-secondary' }}Button text{{/wds-button}}
		{{#wds-button class='wds-is-secondary' disabled=true}}Disabled{{/wds-button}}
		{{#wds-button class='wds-is-secondary wds-is-active'}}Is active{{/wds-button}}
	{{/component-demo}}
</section>

<section>
	<h2>Text Buttons</h2>
	{{#component-demo}}
		{{#wds-button class='wds-is-text' }}Button text{{/wds-button}}
		{{#wds-button class='wds-is-text' disabled=true}}Disabled{{/wds-button}}
		{{#wds-button class='wds-is-text wds-is-active'}}Is active{{/wds-button}}
	{{/component-demo}}
</section>

<section>
	<h2>Other usages</h2>
	{{#component-demo}}
		{{#wds-button}}Multiline
			<br>button text
			<br>with 3rd line{{/wds-button}}
		{{#wds-button tagName='a' href='#'}}Link button{{/wds-button}}
	{{/component-demo}}
</section>

<section>
	<h2>Sizes</h2>

	<h3>Primary Buttons</h3>
	{{#component-demo}}
		{{#wds-button class='wds-is-squished'}}Squished{{/wds-button}}
		{{#wds-button}}Normal{{/wds-button}}
		{{#wds-button class='wds-is-stretched'}}Stretched{{/wds-button}}
	{{/component-demo}}

	<h3>Secondary Buttons</h3>
	{{#component-demo}}
		{{#wds-button class='wds-is-secondary wds-is-squished'}}Squished{{/wds-button}}
		{{#wds-button class='wds-is-secondary'}}Normal{{/wds-button}}
		{{#wds-button class='wds-is-secondary wds-is-stretched'}}Stretched{{/wds-button}}
	{{/component-demo}}

	<h3>Text Buttons</h3>
	{{#component-demo}}
		{{#wds-button class='wds-is-text wds-is-squished'}}Squished{{/wds-button}}
		{{#wds-button class='wds-is-text'}}Normal{{/wds-button}}
	{{/component-demo}}
</section>
