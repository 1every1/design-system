{{#if model.wordmark.image-url}}
	<div class="wds-page-header__wordmark">
		<a accesskey="z" href="{{model.wordmark.href}}">
			<img src="{{model.wordmark.image-url}}" alt="{{model.wordmark.sitename}}" width="250" height="65">
		</a>
	</div>
{{/if}}

<div class="wds-page-header__top-container">
	<div class="wds-page-header__wordmark-text">
		<a href="{{model.wordmark.href}}">{{model.wordmark.sitename}}</a>
	</div>
	<div class="wds-page-header__counter">
		<span class="wds-page-header__counter-value">{{model.counter.value}}</span>
		<span class="wds-page-header__counter-label">{{model.counter.label}}</span>
	</div>
	<div class="wds-page-header__wiki-buttons wds-button-group">
		{{#each model.wiki-buttons as |button|}}
			{{#if button.label}}
				<a class="wds-button wds-is-squished wds-is-secondary wds-has-icon" href="{{button.href}}">
					{{wds-icon name=button.icon class='wds-icon-tiny'}}
					{{button.label}}
				</a>
			{{else}}
				<a class="wds-button wds-is-squished wds-is-secondary" href="{{button.href}}">
					{{wds-icon name=button.icon class='wds-icon-tiny'}}
				</a>
			{{/if}}

		{{/each}}
	</div>
</div>

<div class="wds-page-header__local-navigation">

</div>
