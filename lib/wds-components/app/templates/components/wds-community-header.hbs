{{#if model.wordmark.image-url}}
	<div class="wds-community-header__wordmark">
		<a accesskey="z" href="{{model.wordmark.href}}">
			<img src="{{model.wordmark.image-url}}" alt="{{model.wordmark.sitename}}" width="250" height="65">
		</a>
	</div>
{{/if}}

<div class="wds-community-header__top-container">
	<div class="wds-community-header__wordmark-text">
		<a href="{{model.wordmark.href}}">{{model.wordmark.sitename}}</a>
	</div>
	<div class="wds-community-header__counter">
		<span class="wds-community-header__counter-value">{{numeral model.counter.value}}</span>
		<span class="wds-community-header__counter-label">{{i18n model.counter.label.key}}</span>
	</div>
	<div class="wds-community-header__wiki-buttons wds-button-group">
		{{#each model.wiki-buttons as |button|}}
			<a class="wds-button wds-is-squished wds-is-secondary"
			   href="{{button.href}}"
			   title={{if button.title (i18n button.title.key) null}}
			>
				{{wds-icon name=button.icon class='wds-icon-small'}}
				{{#if button.label}}
					<span>{{i18n button.label.key}}</span>
				{{/if}}
			</a>
		{{/each}}
	</div>
</div>

{{wds-community-header/local-navigation model=model.local-navigation}}

