<List>
  {{#each navigation as |parentRoute|}}
    <li>
      <input
        type="checkbox"
        id={{parentRoute.id}}
        class="main-navigation__toggle"
        checked={{if parentRoute.expanded "checked"}}
      >
      <label for={{parentRoute.id}}><strong>{{parentRoute.name}}</strong> <Icon name="menu-control" size="tiny"}}</label>
      {{#list linked=true}}
        {{#each parentRoute.items as |route|}}
          <li>{{#link-to route.location}}{{route.name}}{{/link-to}}</li>
        {{/each}}
      </List>
    </li>
  {{/each}}
</List>
