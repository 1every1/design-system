<div
	class="{{@class}} {{if @isLevel2 "wds-dropdown-level-2__toggle" "wds-dropdown__toggle"}}"
	title={{@title}} 
	href={{@href}} 
	data-tracking-label={{@data-tracking-label}}
>
	{{#if hasBlock}}
		{{yield (component "wds-dropdown-icon" isLevel2=@isLevel2)}}
	{{else}}
		<span>{{@text}}</span>{{wds-dropdown-icon isLevel2=@isLevel2}}
	{{/if}}
</div>
