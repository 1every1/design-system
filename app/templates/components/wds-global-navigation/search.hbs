{{#wds-dropdown class=(concat 'wds-global-navigation__search-input-wrapper' (if hasSuggestions ' wds-is-active')) as |dropdown|}}
	{{#dropdown.toggle tagName='label' class='wds-global-navigation__search-label'}}
		{{wds-icon name='magnifying-glass' size='small' class='wds-global-navigation__search-label-icon'}}
		{{input
			value=query
			class='wds-global-navigation__search-input'
			name=model.results.param-name
			placeholder=searchPlaceholder
			type='search'
			autocomplete='off'
			input=(action 'onQueryChanged')
			focus-in=(action 'onFocusSearch')
			key-down=(action 'onKeyDown')
		}}
	{{/dropdown.toggle}}
	{{#wds-button text=true class='wds-global-navigation__search-close' type='reset' action=(action 'closeSearch' preventDefault=false)}}
		{{svg 'wds-icons-cross' class='wds-icon wds-icon-small wds-global-navigation__search-close-icon'}}
	{{/wds-button}}
	{{#dropdown.content class='wds-global-navigation__search-suggestions'}}
		{{#wds-list linked=true ellipsis=true}} 
			{{#each suggestions as |suggestion index|}}
				<li class="{{if (equal index selectedSuggestionIndex) 'wds-is-selected'}}">
					<a href="{{suggestion.uri}}" class="wds-global-navigation__dropdown-link">
						{{{suggestion.text}}}
					</a>
				</li>
			{{/each}}
		{{/wds-list}}
	{{/dropdown.content}}
	{{#wds-button class='wds-global-navigation__search-submit' disabled=isEmptyQuery}}
		{{wds-icon name='arrow' size='small' class='wds-global-navigation__search-submit-icon'}}
	{{/wds-button}}
{{/wds-dropdown}}
