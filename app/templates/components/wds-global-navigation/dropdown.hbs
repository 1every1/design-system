{{#wds-dropdown
	class=additionalClassNames
	as |dropdown|
}}
	{{#dropdown.toggle
		class='wds-global-navigation__dropdown-toggle'
		title=(if showAvatar model.username)
		as |chevron|
	}}
		{{#if showAvatar}}
			{{wds-avatar src=model.avatar_url alt=model.username}}{{chevron}}
		{{else}}
			<span>{{i18n model.title.key ns='design-system'}}</span>{{chevron}}
		{{/if}}
	{{/dropdown.toggle}}
	{{#dropdown.content
		class='wds-global-navigation__dropdown-content'
		dropdownRightAligned=dropdownRightAligned
	}}
		{{#wds-list linked=true}}
			{{#each model.items as |item|}}
				<li>
					{{component
						(if (equal item.type 'link')
							'wds-global-navigation/link'
							'wds-global-navigation/link-dropdown'
						)
						model=item
					}}
				</li>
			{{/each}}
		{{/wds-list}}
	{{/dropdown.content}}
{{/wds-dropdown}}
