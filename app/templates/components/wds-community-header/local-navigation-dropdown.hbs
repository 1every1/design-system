{{#wds-dropdown as |dropdown|}}
	{{#dropdown.toggle class='wds-tabs__tab-label' as |chevron|}}
		{{#if item.href}}
			<a href="{{item.href}}">
				{{wds-community-header/nav-item-with-icon item=item}}
			</a>
		{{else}}
			{{wds-community-header/nav-item-with-icon item=item}}
		{{/if}}
		{{chevron}}
	{{/dropdown.toggle}}
	{{#dropdown.content scrollable=false}}
		{{#wds-list linked=true bold=true}}
			{{#each item.items as |item index|}}
				{{#if item.items}}
					{{wds-community-header/local-navigation-dropdown-level-2 item=item currentIndex=index}}
				{{else}}
					<li>
						<a href="{{item.href}}" data-tracking-label="{{item.tracking_label}}">
							{{#if (equal item.title.type 'translatable-text')}}
								{{i18n item.title.key ns='design-system'}}
							{{else}}
								{{item.title.value}}
							{{/if}}
						</a>
					</li>
				{{/if}}
			{{/each}}
		{{/wds-list}}
	{{/dropdown.content}}
{{/wds-dropdown}}
